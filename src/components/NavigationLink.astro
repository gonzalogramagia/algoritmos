---
// Componente de navegación "Volver a la Raíz"

---

<div id="navigation-link-container" class="text-center pt-8 pb-4">
  <a
    href="https://famaf.algoritmos1.com"
    class="text-lg font-medium uppercase text-lightModeForegroundMuted underline underline-offset-4 hover:text-lightModeForeground dark:text-darkModeForegroundMuted dark:hover:text-darkModeForeground transition-colors duration-200"

  >
    ← Volver a la Raíz
  </a>
</div>

<script>
  function applyConfig() {
    const config = JSON.parse(localStorage.getItem('appConfig') || '{}');
    const container = document.getElementById('navigation-link-container');
    if (container) {
      if (config.showBackToRoot === true) {
        container.style.display = 'block';
      } else {
        container.style.display = 'none';
      }
    }
  }

  document.addEventListener('astro:page-load', () => {
    applyConfig();
    window.addEventListener('config-updated', applyConfig);
  });
</script>
