---
import { Icon } from "astro-icon/components";
---

<!-- Floating Config Button -->
<!-- Floating Config Button Container (matches max-w-screen-sm) -->
<div class="fixed top-0 left-0 w-full h-full pointer-events-none z-50 mx-auto max-w-screen-sm inset-x-0">
    <button
      id="config-toggle-btn"
      class="absolute pointer-events-auto top-8 left-8 flex items-center justify-center rounded-full border border-gray-200 bg-white p-3 shadow-lg transition-all hover:scale-110 hover:shadow-xl group dark:bg-gray-800 dark:border-gray-700"
      aria-label="Abrir configuración"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="24"
        height="24"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        class="w-6 h-6 text-gray-900 transition-colors group-hover:text-blue-500 dark:text-gray-100"
      >
        <path d="M14.7 6.3a1 1 0 0 0 0 1.4l1.6 1.6a1 1 0 0 0 1.4 0l3.77-3.77a6 6 0 0 1-7.94 7.94l-6.91 6.91a2.12 2.12 0 0 1-3-3l6.91-6.91a6 6 0 0 1 7.94-7.94l-3.76 3.76z"/>
      </svg>
    </button>
</div>

<!-- Config Modal -->
<dialog
  id="config-modal"
  class="fixed inset-0 z-50 m-auto w-full max-w-sm rounded-xl border border-gray-200 bg-white p-0 shadow-2xl backdrop:bg-black/50 dark:border-gray-700 dark:bg-gray-800 focus:outline-none"
>
  <div class="relative flex flex-col max-h-[90vh]">
    <!-- Header -->
    <div class="flex items-center justify-between border-b border-gray-100 p-4 dark:border-gray-700">
      <h2 class="text-lg font-semibold text-gray-900 dark:text-gray-100">Configuración</h2>
      <button
        id="close-config-btn"
        class="rounded-full p-2 text-gray-500 transition-colors hover:bg-gray-100 dark:text-gray-400 dark:hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-gray-200 dark:focus:ring-gray-600"
      >
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M18 6 6 18"/><path d="M6 6 18 18"/></svg>
      </button>
    </div>

    <!-- Body -->
    <div class="flex-1 overflow-y-auto p-4 space-y-6">
      


      <!-- Switches -->
      <div class="space-y-4">
        <h3 class="text-sm font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Visibilidad</h3>
        <p class="text-xs text-slate-500 mb-2">Controla qué elementos quieres ver en tu pantalla.</p>

        <label class="flex items-center justify-between cursor-pointer group">
          <div class="flex items-center gap-2">
            <div class="relative w-5 h-5 flex items-center justify-center text-gray-500 dark:text-gray-400 group-hover:text-blue-500 dark:group-hover:text-blue-400 transition-colors">
                 <Icon name="lucide:timer" id="icon-countdown-on" class="absolute w-5 h-5 transition-all scale-100" />
                 <Icon name="lucide:timer-off" id="icon-countdown-off" class="absolute w-5 h-5 transition-all scale-0 hidden" />
            </div>
            <span class="text-sm font-medium text-gray-700 dark:text-gray-300">Cuenta Regresiva</span>
          </div>
          <div class="relative inline-flex items-center cursor-pointer">
            <input type="checkbox" id="switch-countdown" class="sr-only peer" checked>
            <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-2 peer-focus:ring-blue-300 dark:peer-focus:ring-blue-800 rounded-full peer dark:bg-gray-700 peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all dark:border-gray-600 peer-checked:bg-blue-600"></div>
          </div>
        </label>

        <label class="flex items-center justify-between cursor-pointer group">
          <div class="flex items-center gap-2">
             <div class="relative w-5 h-5 flex items-center justify-center text-gray-500 dark:text-gray-400 group-hover:text-blue-500 dark:group-hover:text-blue-400 transition-colors">
                <Icon name="lucide:moon" id="icon-darkmode-on" class="absolute w-5 h-5 transition-all scale-100 rotate-0" />
                <Icon name="lucide:sun" id="icon-darkmode-off" class="absolute w-5 h-5 transition-all scale-0 rotate-90 hidden" />
             </div>
             <span class="text-sm font-medium text-gray-700 dark:text-gray-300">Modo Oscuro</span>
          </div>
          <div class="relative inline-flex items-center cursor-pointer">
            <input type="checkbox" id="switch-darkmode" class="sr-only peer">
            <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-2 peer-focus:ring-blue-300 dark:peer-focus:ring-blue-800 rounded-full peer dark:bg-gray-700 peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all dark:border-gray-600 peer-checked:bg-blue-600"></div>
          </div>
        </label>


      </div>

      <!-- Links Editing -->
      <div class="space-y-4">
        <h3 class="text-sm font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Enlaces Personalizados</h3>
        <div class="space-y-4">
            
            <!-- Link Superior -->
            <div class="p-3 border border-gray-100 rounded-lg bg-gray-50 dark:bg-gray-800 dark:border-gray-700 space-y-2 relative group">
                <div class="flex items-center gap-2">
                    <input type="text" id="input-top-title" placeholder="Título Link Superior (Arriba)" class="link-input block w-full rounded border-gray-300 bg-white p-2 text-sm text-gray-900 dark:border-gray-600 dark:bg-gray-700 dark:text-white">
                    <button id="clear-top-link" class="text-gray-400 hover:text-red-500 transition-colors p-1" aria-label="Eliminar link superior" title="Eliminar">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M3 6h18"/><path d="M19 6v14c0 1-1 2-2 2H7c-1 0-2-1-2-2V6"/><path d="M8 6V4c0-1 1-2 2-2h4c1 0 2 1 2 2v2"/></svg>
                    </button>
                </div>
                <input type="text" id="input-top-url" placeholder="URL: https://www..." class="link-input block w-full rounded border-gray-300 bg-white p-2 text-sm text-gray-900 dark:border-gray-600 dark:bg-gray-700 dark:text-white">
            </div>

            <!-- Link Inferior -->
            <div class="p-3 border border-gray-100 rounded-lg bg-gray-50 dark:bg-gray-800 dark:border-gray-700 space-y-2 relative group">
                 <div class="flex items-center gap-2">
                    <input type="text" id="input-bottom-title" placeholder="Título Link Inferior (Abajo)" class="link-input block w-full rounded border-gray-300 bg-white p-2 text-sm text-gray-900 dark:border-gray-600 dark:bg-gray-700 dark:text-white">
                    <button id="clear-bottom-link" class="text-gray-400 hover:text-red-500 transition-colors p-1" aria-label="Eliminar link inferior" title="Eliminar">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M3 6h18"/><path d="M19 6v14c0 1-1 2-2 2H7c-1 0-2-1-2-2V6"/><path d="M8 6V4c0-1 1-2 2-2h4c1 0 2 1 2 2v2"/></svg>
                    </button>
                </div>
                <input type="text" id="input-bottom-url" placeholder="URL: https://www..." class="link-input block w-full rounded border-gray-300 bg-white p-2 text-sm text-gray-900 dark:border-gray-600 dark:bg-gray-700 dark:text-white">
            </div>

        </div>
      </div>

    </div>

    <!-- Footer -->
    <div class="border-t border-gray-100 p-4 dark:border-gray-700">
      <button
        id="close-modal-footer-btn"
        class="w-full rounded-lg bg-blue-600 px-5 py-2.5 text-center text-sm font-medium text-white hover:bg-blue-700 focus:outline-none focus:ring-4 focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800"
      >
        Listo
      </button>
    </div>
  </div>
</dialog>

<script>
  // State variables - re-select on each load
  let toggleBtn, modal, closeBtn, footerCloseBtn;
  let switchCountdown, switchDarkMode;
  let inputTopTitle, inputTopUrl, inputBottomTitle, inputBottomUrl;

  function initConfig() {
     toggleBtn = document.getElementById('config-toggle-btn');
     modal = document.getElementById('config-modal') as HTMLDialogElement;
     closeBtn = document.getElementById('close-config-btn');
     footerCloseBtn = document.getElementById('close-modal-footer-btn');
    
     switchCountdown = document.getElementById('switch-countdown') as HTMLInputElement;
     switchDarkMode = document.getElementById('switch-darkmode') as HTMLInputElement;

     inputTopTitle = document.getElementById('input-top-title') as HTMLInputElement;
     inputTopUrl = document.getElementById('input-top-url') as HTMLInputElement;
     inputBottomTitle = document.getElementById('input-bottom-title') as HTMLInputElement;
     inputBottomUrl = document.getElementById('input-bottom-url') as HTMLInputElement;
    
     loadConfig();
     setupEventListeners();
  }

  // Load config logic
  function getConfigKey() {
    return window.location.pathname.startsWith('/clases') ? 'clasesConfig' : 'appConfig';
  }

  function loadConfig() {
    const pageKey = getConfigKey();
    const appConfig = JSON.parse(localStorage.getItem('appConfig') || '{}');
    // If we are on home, pageConfig IS appConfig. If not, it's separate.
    const pageConfig = pageKey === 'appConfig' ? appConfig : JSON.parse(localStorage.getItem(pageKey) || '{}');
    
    // Update Header
    const modalTitle = document.querySelector('#config-modal h2');
    if (modalTitle) {
         modalTitle.textContent = pageKey === 'clasesConfig' ? 'Configuración (Clases)' : 'Configuración';
    }
    
    // Switches -> Shared (appConfig)
    // DarkMode defaults to true if undefined
    const isDark = appConfig.darkMode !== false; 
    switchCountdown.checked = appConfig.showCountdown !== false; 
    switchDarkMode.checked = isDark;
    
    // Apply initial state
    toggleDarkMode(isDark);
    updateIcons();
    
    // Links -> Page Specific (pageConfig)
    if (pageConfig.topLink) {
        inputTopTitle.value = pageConfig.topLink.title || '';
        inputTopUrl.value = pageConfig.topLink.url || '';
    } else {
        inputTopTitle.value = '';
        inputTopUrl.value = '';
    }

    if (pageConfig.bottomLink) {
        inputBottomTitle.value = pageConfig.bottomLink.title || '';
        inputBottomUrl.value = pageConfig.bottomLink.url || '';
    } else {
        inputBottomTitle.value = '';
        inputBottomUrl.value = '';
    }
  }

  // Update config logic (Instant)
  function updateConfig() {
    const pageKey = getConfigKey();
    
    // 1. Update Shared Config (Switches)
    const appConfig = JSON.parse(localStorage.getItem('appConfig') || '{}');
    appConfig.showCountdown = switchCountdown.checked;
    appConfig.darkMode = switchDarkMode.checked;
    localStorage.setItem('appConfig', JSON.stringify(appConfig));

    toggleDarkMode(appConfig.darkMode);
    updateIcons();

    // 2. Update Page Config (Links)
    // If we are on home, we just updated appConfig, so we must add links to it.
    // If we are on clases, we fetch distinct config.
    
    if (pageKey === 'appConfig') {
        // We are on home, appConfig already has the switches, now add links
        appConfig.topLink = {
            title: inputTopTitle.value.trim(),
            url: inputTopUrl.value.trim()
        };
        appConfig.bottomLink = {
            title: inputBottomTitle.value.trim(),
            url: inputBottomUrl.value.trim()
        };
        localStorage.setItem('appConfig', JSON.stringify(appConfig));
    } else {
        // We are on classes or other
        const pageConfig = JSON.parse(localStorage.getItem(pageKey) || '{}');
        pageConfig.topLink = {
            title: inputTopTitle.value.trim(),
            url: inputTopUrl.value.trim()
        };
        pageConfig.bottomLink = {
            title: inputBottomTitle.value.trim(),
            url: inputBottomUrl.value.trim()
        };
        localStorage.setItem(pageKey, JSON.stringify(pageConfig));
    }
    
    // Dispatch event for other components to update
    window.dispatchEvent(new CustomEvent('config-updated'));
  }

  
  function toggleDarkMode(isDark) {
    if (isDark) {
      document.documentElement.classList.add('dark');
    } else {
      document.documentElement.classList.remove('dark');
    }
  }

  function updateIcons() {
     const timerOn = document.getElementById('icon-countdown-on');
     const timerOff = document.getElementById('icon-countdown-off');
     const moon = document.getElementById('icon-darkmode-on');
     const sun = document.getElementById('icon-darkmode-off');
     
     if (switchCountdown.checked) {
         timerOn?.classList.remove('hidden', 'scale-0');
         timerOn?.classList.add('scale-100');
         timerOff?.classList.add('hidden', 'scale-0');
         timerOff?.classList.remove('scale-100');
     } else {
         timerOn?.classList.add('hidden', 'scale-0');
         timerOn?.classList.remove('scale-100');
         timerOff?.classList.remove('hidden', 'scale-0');
         timerOff?.classList.add('scale-100');
     }

     if (switchDarkMode.checked) {
         moon?.classList.remove('hidden', 'scale-0', 'rotate-90');
         moon?.classList.add('scale-100', 'rotate-0');
         sun?.classList.add('hidden', 'scale-0', '-rotate-90');
         sun?.classList.remove('scale-100', 'rotate-0');
     } else {
         moon?.classList.add('hidden', 'scale-0', 'rotate-90');
         moon?.classList.remove('scale-100', 'rotate-0');
         sun?.classList.remove('hidden', 'scale-0', '-rotate-90');
         sun?.classList.add('scale-100', 'rotate-0');
     }
  }

  function setupEventListeners() {
    // Modal controls
    if (toggleBtn && modal) {
        toggleBtn.addEventListener('click', () => {
        loadConfig();
        modal.showModal();
        });
    }

    if (closeBtn && modal) {
        closeBtn.addEventListener('click', () => {
        modal.close();
        });
    }

    if (footerCloseBtn && modal) {
        footerCloseBtn.addEventListener('click', () => {
        modal.close();
        });
    }

    // Instant updates
    if (switchCountdown) switchCountdown.addEventListener('change', updateConfig);
    if (switchDarkMode) switchDarkMode.addEventListener('change', updateConfig);
    
    [inputTopTitle, inputTopUrl, inputBottomTitle, inputBottomUrl].forEach(input => {
        if (input) input.addEventListener('input', updateConfig);
    });

    // Clear Buttons Logic
    const clearTopBtn = document.getElementById('clear-top-link');
    const clearBottomBtn = document.getElementById('clear-bottom-link');

    if (clearTopBtn) {
        clearTopBtn.addEventListener('click', () => {
            if(inputTopTitle) inputTopTitle.value = '';
            if(inputTopUrl) inputTopUrl.value = '';
            updateConfig();
        });
    }

    if (clearBottomBtn) {
        clearBottomBtn.addEventListener('click', () => {
            if(inputBottomTitle) inputBottomTitle.value = '';
            if(inputBottomUrl) inputBottomUrl.value = '';
            updateConfig();
        });
    }
  }

  // Initial load to sync switches if needed
  document.addEventListener('astro:page-load', initConfig);
</script>

<style>
  /* Optional: styling for backdrop if not supported by Tailwind config directly or for specific modal behavior */
  dialog::backdrop {
    background: rgba(0, 0, 0, 0.5);
    backdrop-filter: blur(2px);
  }
  
  /* Animation for modal */
  dialog {
    transition: opacity 0.2s allow-discrete, display 0.2s allow-discrete, overlay 0.2s allow-discrete;
    opacity: 0;
  }
  
  dialog[open] {
    opacity: 1;
  }
  
  @starting-style {
    dialog[open] {
      opacity: 0;
    }
  }
</style>
